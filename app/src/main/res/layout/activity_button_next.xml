<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ButtonNextActivity">

    <View
        android:id="@+id/view_center"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        android:background="@color/activity_next_1" />

    <View
        android:id="@+id/view1"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_above="@id/view_center"
        android:layout_alignEnd="@id/view_center"
        android:background="@color/activity_next_2" />
    <View
        android:id="@+id/view2"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_above="@id/view_center"
        android:layout_toEndOf="@id/view_center"
        android:background="#039C8E" />
    <View
        android:id="@+id/view3"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_below="@id/view_center"
        android:layout_alignEnd="@id/view_center"
        android:background="@color/activity_next_2" />
    <View
        android:id="@+id/view4"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_below="@id/view_center"
        android:layout_toEndOf="@id/view_center"
        android:background="#039C8E" />

</RelativeLayout>